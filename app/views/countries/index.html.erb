<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p id="alert"><%= alert %></p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h1><%= t '.title' %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 jumbotron table-responsive">
      <div class="container">
        <div class="row">
          <div class="col-md-3 form-group">
            <label for="search_country_input"><%= t '.filter' %></label>
            <input id="search_country_input" class="form-control" placeholder="<%= t '.type' %>"/>
          </div>
        </div>
        <br/>
      </div>
      <table id="countries_table" class="table table-striped table-bordered table-hover table-inverse">
        <tbody id="cbody">
          <% @countries.each do |country| %>
            <tr>
              <td>
                <%= country.name %>
              </td>
              <td>
                <div class="flag">
                  <%= link_to group_country_path(id: country.id, group_id: country.group.id) do %>
                    <%= image_tag country.img, class: 'img-responsive' %>
                  <% end %>
                </div>
              </td>
              <td>
                <%= Group.model_name.human + ': ' + country.group.name %>
              </td>
              <td>
                <%= link_to group_country_path(group_id: country.group.id, id: country.id) do %>
                  <i class="fa fa-arrow-right goto_fa" aria-hidden="true"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>