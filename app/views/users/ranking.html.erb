<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p id="alert"><%= alert %></p>
      <% end %>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-12">
      <h1><%= t '.title' %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 jumbotron table-responsive">
      <table id="table" class="table table-hover table-condensed table-inverse">
        <thead>
          <tr>
            <th><%= User.human_attribute_name('visible_name') %></th>
            <th><%= t '.points' %></th>
            <th><%= t '.bets_count' %></th>
            <th><%= t '.active_bets_count' %></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
            <% points = u.bets_points %>
            <tr>
              <td data-title="<%= User.model_name.human %>"><%= u.visible_name %></td>
              <td data-title="<%= t '.points' %>"><%= points.to_s + ' Pkt' %></td>
              <td data-title="<%= t '.bets_count' %>"><%= u.bets.done.count.to_s %></td>
              <td data-title="<%= t '.active_bets_count' %>"><%= u.bets.active.count.to_s %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
