<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if notice %>
          <p id="notice"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p id="alert"><%= alert %></p>
        <% end %>
      </div>
    </div>  
    <div class="row">
      <div class="col-md-12">
        <h1><%= t '.title' %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 table-responsive">
        <table id="table" class="table table-hover table-condensed table-inverse">
          <thead>
            <tr>
              <th><%= User.human_attribute_name('visible_name') %></th>
              <th><%= t '.points' %></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |u| %>
                <% points = u.bets_points %>
                <td data-title="<%= User.model_name.human %>"><%= u.visible_name %></td>
                <td data-title="<%= t '.points' %>"><%= points.to_s + 'Pkt' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
