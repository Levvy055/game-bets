<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p id="alert"><%= alert %></p>
      <% end %>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-12">
      <h1><%= t '.title' %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 jumbotron table-responsive">
      <table id="all_bets_table" class="table table-hover table-condensed table-inverse">
        <thead>
          <tr>
            <th><%= User.model_name.human %></th>
            <th><%= t '.points' %></th>
            <th><%= t '.start_time' %></th>
            <th><%= Country.model_name.human %></th>
            <th><%= t '.or_score' %></th>
            <th><%= Country.model_name.human %></th>
            <th><%= t '.options' %></th>
          </tr>
        </thead>
        <tbody>
          <% @bets.each do |bet| %>
            <% match, a, b = bet.match, bet.country_a, bet.country_b 
              if !match.are_bets_active
                points = bet.points
                if points == 3 %>
                    <tr class="tp_win">
                <% elsif points == 1 %>
                    <tr class="op_win">
                <% else %>
                    <tr class="np_win">
                <% end 
              else %>
                <tr class="wait_win">
              <% end %>
              <td data-title="<%= User.model_name.human %>"><%= bet.user.visible_name %></td>
              <td data-title="<%= t '.points' %>"><%= points != nil ? points.to_s + 'Pkt' :  t('.waiting') %></td>
              <td data-title="<%= t '.start_time' %>"><%= match.start_time.to_s(:short) %></td>
              <td data-title="<%= Country.model_name.human %>">
                <%= link_to group_country_path(id: a.id, group_id: a.group.id) do %>
                  <div class="country_flag">
                    <%= image_tag 'flags/'+a.code+'.png', class: 'img-responsive' %>
                    <p><%= a.name %></p>
                  </div>
                <% end %>
              </td>
              <td data-title="<%= t '.or_score' %>">
                <fieldset class="predicted_score">
                  <legend><%= t '.p_score' %></legend>
                  <div>
                    <%= bet.score_a == nil ? 'Err' : bet.score_a.to_s %>
                    :
                    <%= bet.score_b == nil ? 'Err' : bet.score_b.to_s %>
                  </div>
                </fieldset>
                <% if match.score_a != nil && match.score_b != nil %>
                  <fieldset class="real_score">
                    <legend><%= t '.r_score' %></legend>
                    <div>
                      <%=  match.score_a.to_s %> 
                      : 
                      <%=  match.score_b.to_s %> 
                    </div>
                  </fieldset>
                <% else %>
                  <div class="real_score">
                    Match not finished
                  </div>
                <% end %>
              </td>
              <td data-title="<%= Country.model_name.human %>">
                <%= link_to group_country_path(id: b.id, group_id: b.group.id) do %>
                  <div class="country_flag">
                    <%= image_tag 'flags/'+b.code+'.png', class: 'img-responsive' %>
                    <p><%= b.name %></p>
                  </div>
                <% end %>
              </td>
              <td data-title="<%= t '.options' %>">
                <%= link_to match_bet_path(id: bet.id, match_id: bet.match.id) do %>
                  <i class="fa fa-info" aria-hidden="true"></i>
                <% end %>
                <% if match.are_bets_active %>
                   | <%= link_to edit_match_bet_path(id: bet.id, match_id: bet.match.id), class: 'info-link' do %>
                     <i class="fa fa-pencil" aria-hidden="true"></i>
                   <% end %>| 
                  <%= link_to match_bet_path(id: bet.id, match_id: bet.match.id), class: 'info-link', method: :delete, data: { confirm: t('.rus?') } do %>
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
